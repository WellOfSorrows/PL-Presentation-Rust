% beamer specific options

\mode<presentation>
{
    %% defining colors 
	\definecolor{ShirazBlue}{RGB}{22,43,58}
	\definecolor{ShirazYellow}{RGB}{22,43,58}
	\definecolor{Black}{RGB}{0,0,0}
	\definecolor{White}{RGB}{255,255,255}
	\definecolor{cadetgrey}{rgb}{0.57, 0.64, 0.69}
	\definecolor{Rust}{RGB}{22,43,58}
    \definecolor{beamer@barcolor}{RGB}{194,193,204}% light blue
    \definecolor{beamer@normaltextcolor}{RGB}{84,97,110}% gray blue
    \definecolor{beamer@headercolor}{HTML}{008080} % dark blue

    %% setting the above definitions
    \setbeamercolor{structure}{fg=Rust}
    \setbeamercolor{normal text}{fg=Black}
    \setbeamercolor{frametitle}{fg=white,bg=Rust}
    \setbeamercolor{Feather}{fg=cadetgrey!50,bg=Rust}
}

\mode<all>